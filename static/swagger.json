{
    "openapi": "3.0.0",
    "info": {
        "description": "API para la Firma electrónica",
        "version": "1.0.0",
        "title": "Firma electrónica"
    },
    "tags": [
        {
            "name": "CRUD Documentos",
            "description": "CRUD de prueba para el funcionamiento de la API"
        }
    ],
    "components": {
        "schemas": {
            "Documents": {
                "type": "object",
                "properties": {
                    "formato": {
                        "type": "string"
                    },
                    "titulo": {
                        "type": "string"
                    },
                    "hash": {
                        "type": "string"
                    }
                }
            },
            "titulo":{
                "type":"string",
                "properties":{
                    "name":{
                        "type":"string"
                    }
                }
            }
        }
    },
    "paths": {
        "/documents": {
            "get":{
                "tags":["GET ALL de documentos"],
                "summary":"GET ALL",
                "responses":{
                    "200":{
                        "description":"Documentos encontrados",
                        "schema":{
                            "$ref":"#/components/schemas/Documents"
                        }
                    },
                    "404":{
                        "description":"NOT FOUND",
                        "schema":{
                            "$ref":"#/components/schemas/Documents"
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Añade otro documento"
                ],
                "summary": "Agrega documento",
                "requestBody": {
                    "description": "POST a DatosPrueba",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Documents"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Documento agregado",
                        "schema": {
                            "$ref": "#/components/schemas/Documents"
                        }
                    },
                    "404": {
                        "description": "NOT FOUND",
                        "schema": {
                            "$ref": "#/components/schemas/Documents"
                        }
                    }
                }
            }
        },
        "/documents/{titulo}":{
            "get":{
                "tags":["GET ONE de documentos"],
                "summary":"Buscar un único documento",
                "parameters":[{
                    "name":"titulo",
                    "in":"path",
                    "description":"Titulo del documento a consultar",
                    "required":true,
                    "type":"string",
                    "schema":{
                        "$ref":"#/components/schemas/titulo"
                    }
                }],
                "responses":{
                    "200":{
                        "description":"Documento encontrado",
                        "schema":{
                            "$ref":"#/components/schemas/Documents"
                        }
                    },
                    "404":{
                        "description":"NOT FOUND",
                        "schema":{
                            "$ref":"#/components/schemas/Documents"
                        }
                    }
                }
            },
            "put":{
                "tags":["Actualizar un documento"],
                "parameters":[{
                    "name":"titulo",
                    "in":"path",
                    "description":"Título del documento a actualizar",
                    "required":true,
                    "type":"string",
                    "schema":{
                        "$ref":"#/components/schemas/titulo"
                    }
                }],
                "summary":"Actualiza un registro de documentos",
                "requestBody":{
                    "description":"Actualiza un registro a partir del título",
                    "required":true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/components/schemas/Documents"
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description":"Documento actualizado",
                        "schema":{
                            "$ref":"#/components/schemas/Documents"
                        }
                    },
                    "404":{
                        "description":"NOT FOUND",
                        "schema":{
                            "$ref":"#/components/schemas/Documents"
                        }
                    }
                }
            },
            "delete":{
                "tags":["Eliminar un documento"],
                "parameters":[{
                    "name":"titulo",
                    "in":"path",
                    "description":"Título del documento a eliminar",
                    "required":true,
                    "type":"string",
                    "schema":{
                        "$ref":"#/components/schemas/titulo"
                    }
                }],
                "summary":"Elimina un documento por su titulo",
                "responses":{
                    "200":{
                        "description":"Documento eliminado",
                        "schema":{
                            "$ref":"#/components/schemas/Documents"
                        }
                    },
                    "404":{
                        "description":"NOT FOUND",
                        "schema":{
                            "$ref":"#/components/schemas/Documents"
                        }
                    }
                }
            }
        }
    }
}